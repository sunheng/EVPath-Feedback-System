<!doctype>
<html ng-app="dashboard">
<head>
  <title>EVPath Feedback System</title>
  <link rel="stylesheet" type="text/css" href="stylesheets/bootstrap.min.css">
  <link rel="stylesheet" type="text/css" href="stylesheets/dashboard.css">
  <script type="text/javascript" src="/socket.io/socket.io.js"></script>
  <script type="text/javascript" src="javascripts/jquery/jquery.min.js"></script>
  <script type="text/javascript" src="javascripts/bootstrap/bootstrap.min.js"></script>
  <script type="text/javascript" src="javascripts/angular/angular.min.js"></script>
  <script type="text/javascript" src="javascripts/controllers/dashboard_controllers.js"></script>
  <script type="text/javascript" src="javascripts/services/evpath_service.js"></script>
</head>
<body>
  <nav class="navbar navbar-default navbar-fixed-top">
    <div class="container">
      <div class="navbar-header">
        <a href="#" class="navbar-brand">EVPath Feedback System</a>
      </div>

      <ul class="nav navbar-nav">
        <li class="active"><a href="#">Dashboard <span class="badge">4</span></a></li>
        <li><a href="#">Decision Tree</a></li>
      </ul>
      <p class="navbar-text navbar-right">
        Hello, <%= user.username %>! |
        <a href="/logout" class="navbar-link" type="button">Log Out</a>
      </p>
    </div>
  </nav>
    <!-- <div class="col-xs-8"> -->
      <!-- <img src="images/P04092013_c1_d1_C001H001S0001015060.tif"> -->
      <!-- <img alt="" src="data:image/jpeg;base64,"/> -->
    <!-- </div> -->
  <br>
  <div ng-controller="ImageTilesCtrl">
    <div class="row">
      <div class="col-sm-3" ng-repeat="image in images">
        <a href="#" data-toggle="modal" data-target="#imageModal" ng-click="setCurrentImage($index)">
          <img ng-src="{{image.src}}" class="thumbnail thumbnailBorder img-responsive danger {{image.borderClass}}">
        </a>
      </div>
    </div>
    <!-- Modal -->
    <div class="modal fade" id="imageModal" tabindex="-1" role="dialog" aria-labelledby="imageModal" aria-hidden="true">
      <div class="modal-dialog">
          <div class="modal-content">
              <div class="modal-header">
                <button type="button" class="btn btn-default" ng-click="setCurrentImage(prevIndex)">Previous</button>
                <button type="button" class="btn btn-primary" ng-click="setCurrentImage(nextIndex)">Next</button>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <center><h4 class="modal-title" id="myModalLabel">{{currentImage.name}}</h4></center>
              </div>
              <div class="modal-body row">
                  <ul class="nav nav-tabs">
                     <li class="active">
                        <a href="#info" data-toggle="tab">
                            Image Information
                        </a>
                     </li>
                     <li><a href="#history" data-toggle="tab">History</a></li>
                  </ul>
                  <div class="tab-content">
                     <div class="tab-pane fade in active smallUpperMargin" id="info">
                        <img class="col-md-10 {{currentImage.borderClass}} thumbnail thumbnailBorder" ng-src="{{currentImage.src}}">
                        <div class="col-md-2">
                            <label class="col-md-12 stackingMargin">{{currentImage.attributes}}</label>
                            <button type="button" class="btn btn-success col-md-12 stackingMargin" ng-click="decisionAction(currentIndex, nextIndex, 'Not an Error', 'greenBorder', '<%= user.username %>')">Not an Error</button>
                            <button type="button" class="btn btn-warning col-md-12 stackingMargin" ng-click="decisionAction(currentIndex, nextIndex, 'Not Sure', 'yellowBorder', '<%= user.username %>')">Not Sure</button>
                            <button type="button" class="btn btn-danger col-md-12 stackingMargin" ng-click="decisionAction(currentIndex, nextIndex, 'Error', 'redBorder', '<%= user.username %>')">Error</button>
                        </div>
                     </div>
                     <div class="tab-pane fade smallUpperMargin" id="history">
                        <div class="historyPane">
                          <table class="table col-md-10">
                            <tr>
                              <th>Timestamp</th>
                              <th>Username</th>
                              <th>Decision</th>
                            </tr>
                            <tr class="warning" ng-repeat="changeset in currentImage.history">
                              <td>{{changeset.timestamp}}</td>
                              <td>{{changeset.username}}</td>
                              <td>{{changeset.decision}}</td>
                            </tr>
                          </table>
                        </div>
                     </div>
                  </div>

              </div>
          </div>
        </div>
      </div>
    </div>
  </div>

</body>
</html>